function read_bbn_abundnaces, fdata, nsteps, nnuc

openr,1,fdata
print,"Number of Nuclides = ",nnuc

;abundance array
Y=dblarr(nsteps,nnuc)

;temporary variable
Yin=0.0D
for j=0,nsteps-1,do begin
    for i=0,nnucs-1,do begin
        readu,1,Yin
        Y(j,i)=Yin
                                ;print,"Y_",j," = ",i
    endfor                      ;nnucs
endfor                          ;nsteps

close,1
return Y
end
